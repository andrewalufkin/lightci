// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pipeline {
  id            String   @id @default(uuid())
  name          String
  description   String?
  repository    String
  defaultBranch String   @map("default_branch")
  steps         Json     @default("[]") // Array of PipelineStep objects
  triggers      Json?    @default("{}") // Optional triggers configuration
  schedule      Json?    @default("{}") // Optional schedule configuration
  artifactsEnabled Boolean @default(true) @map("artifacts_enabled")
  artifactPatterns Json? @default("[]") @map("artifact_patterns") // Array of pattern strings
  artifactRetentionDays Int @default(30) @map("artifact_retention_days")
  artifactStorageType String @default("local") @map("artifact_storage_type")
  artifactStorageConfig Json? @default("{}") @map("artifact_storage_config")
  status        String   @default("created")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  runs          PipelineRun[]

  @@map("pipelines")
}

model PipelineRun {
  id            String   @id @default(uuid())
  pipelineId    String   @map("pipeline_id")
  pipeline      Pipeline @relation(fields: [pipelineId], references: [id])
  status        String   @default("pending")
  branch        String
  commit        String?
  startedAt     DateTime @default(now()) @map("started_at")
  completedAt   DateTime? @map("completed_at")
  stepResults   Json     @default("[]") // Array of step execution results
  logs          Json     @default("[]") // Array of log entries
  error         String?
  artifactsCollected Boolean @default(false) @map("artifacts_collected")
  artifactsPath String? @map("artifacts_path")
  artifactsSize Int? @map("artifacts_size")
  artifactsCount Int? @map("artifacts_count")
  artifactsExpireAt DateTime? @map("artifacts_expire_at")

  @@map("pipeline_runs")
} 