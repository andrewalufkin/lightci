// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pipeline {
  id            String        @id @default(uuid())
  name          String
  description   String?
  repository    String
  defaultBranch String        @map("default_branch")
  steps         Json          @default("[]") // Array of PipelineStep objects
  triggers      Json?         @default("{}") // Optional triggers configuration
  schedule      Json?         @default("{}") // Optional schedule configuration
  status        String        @default("created")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  runs          PipelineRun[]

  @@map("pipelines")
}

model PipelineRun {
  id          String    @id @default(uuid())
  pipelineId  String    @map("pipeline_id")
  pipeline    Pipeline  @relation(fields: [pipelineId], references: [id])
  status      String    @default("pending")
  branch      String
  commit      String?
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")
  stepResults Json      @default("[]") // Array of step execution results
  logs        Json      @default("[]") // Array of log entries
  error       String?

  @@map("pipeline_runs")
}
